<header>
<div class="headerwrapper">
	<img src="http://s3-media1.ak.yelpcdn.com/assets/2/www/img/7ccfbbb81622/structural/header_stars.png">
	<div class="logo">
		<img src=""
	</div>
	</div>
</header>
<body>
<div class="wrapper">
	<div class="central">
		<% if @restaurants.any? %>
			<% @restaurants.each do |restaurant| %>

				<h1><%= link_to restaurant.name %></h1><br>
				<%= link_to 'Edit', edit_restaurant_path(restaurant), class: 'btn btn-primary' %><br>
				<%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>

						<%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant), class: 'btn btn-success' %>

						<h3 class='average_review'>
							<%= star_rating(restaurant.average_score) %>
						</h3>

			<% end %>
		<% else %>
			No restaurants yet
		<% end %>

		<br>
		<%= link_to 'Add a restaurant', new_restaurant_path %>
	</div>
</div>
</body>